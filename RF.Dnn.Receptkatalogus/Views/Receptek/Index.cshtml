<script type="text/javascript">
    var rdiv = document.getElementById('rdiv');
    var bdiv = document.getElementById('bdiv');
    var vdiv = document.getElementById('vdiv');

    var reggelik = document.getElementById('reggelik');
    reggelik.style.display = 'none';
    var ebedek = document.getElementById('ebedek');
    ebedek.style.display = 'none';
    var vacsorak = document.getElementById('vacsorak');
    vacsorak.style.display = 'none';


    function katlista(etkezes) {
        var div = document.getElementById('kategorialista');
        if (div.style.display !== 'none') {
            div.style.display = 'none';
        }
        else {
            div.style.display = 'block';
        }
        var etkezesdiv = document.getElementById(etkezes);
        if (etkezesdiv.style.display == 'none') {
            etkezesdiv.style.display = 'flex';
        }
    };

    rdiv.onclick = function () {
        katlista('reggelik');
    }
    bdiv.onclick = function () {
        katlista('ebedek');
    }
    vdiv.onclick = function () {
        katlista('vacsorak');
    }

    var receptlista = document.getElementById('receptlista');


    var receptinfo = document.getElementById('receptinfo');

    var recept1 = document.getElementById('recept1');
    var recept2 = document.getElementById('recept2');
    var recept3 = document.getElementById('recept3');
    var recept4 = document.getElementById('recept4');
    var recept5 = document.getElementById('recept5');
    var recept6 = document.getElementById('recept6');

