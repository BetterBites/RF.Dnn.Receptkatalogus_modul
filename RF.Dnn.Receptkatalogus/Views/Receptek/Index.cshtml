<div id="kategorialista">
    <div class="modulcimek">
        <h1 class="modulcim">Találd meg kedvenc mentes receptjeidet!</h1>
        <h3 class="modulalcim">Válassz kategóriát!</h3>
    </div>
    <div id="kategoriacontainer" class="kategoriacontainer">
        <div id="rdiv" class="kategoria">
            <div class="kategoriakep">
                <img class="katkep" src="~/Portals/0/Images/reggeli.png">
            </div>
            <div class="kategorianev">
                <h3>Reggeli</h3>

            </div>
        </div>
        <div id="bdiv" class="kategoria">
            <div class="kategoriakep">
                <img class="katkep" src="~/Portals/0/Images/ebed.png">
            </div>
            <div class="kategorianev">
