            </div>
            <div class="kategorianev">
                <h3>Vacsora</h3>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var rdiv = document.getElementById('rdiv');
    var bdiv = document.getElementById('bdiv');
    var vdiv = document.getElementById('vdiv');


    var katlista = function () {
        var div = document.getElementById('kategorialista');
        if (div.style.display !== 'none') {
            div.style.display = 'none';
        }
        else {
            div.style.display = 'block';
        }
    };

    rdiv.onclick = katlista;
    bdiv.onclick = katlista;
    vdiv.onclick = katlista;

</script>